<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>hbase.tmp.dir</name>
    <value>/mnt/hbase</value>
  </property>
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://zookage/hbase</value>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>zookeeper-server-0.zookeeper-server.zookage.svc.cluster.local,zookeeper-server-1.zookeeper-server.zookage.svc.cluster.local,zookeeper-server-2.zookeeper-server.zookage.svc.cluster.local</value>
  </property>
</configuration>
